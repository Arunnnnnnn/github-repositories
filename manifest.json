{
	"background": {
		"scripts": [
			"js/jquery-1.7.min.js",
			"js/cache.js",
			"js/socket.js",
			"js/storage.js",
			"js/filter.js",
			"js/follows.js",
			"js/notifier.js",
			"js/repos.js",
			"js/watched.js"
		]
	},
    "browser_action": {
        "default_icon": "img/icon_128x128.png",
        "default_title": "GitHub Repositories",
        "default_popup": "popup.html"
    },
    "content_scripts": [
    	{
    		"matches": ["https://github.com/robots.txt*"],
    		"js": ["js/injection.js"],
    		"run_at": "document_start"
    	}
    ],   
 	"content_security_policy": "script-src 'self' https://ssl.google-analytics.com/ga.js; object-src 'self'",
    "description": "Quickly access your GitHub data.",
    "icons": {
        "16": "img/icon_16x16.png",
        "48": "img/icon_48x48.png",
        "128": "img/icon_128x128.png"
    },
	"manifest_vesion": 2,
    "name": "GitHub Repositories", 
    "permissions": [
		"background",
		"clipboardRead",
		"tabs",
    	"https://github.com/*",
    	"https://api.github.com/*"
    ],     
    "version": "2.1.?"
}