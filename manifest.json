{
    "browser_action": {
        "default_icon": "img/icon_128x128.png",
        "default_title": "GitHub Repositories",
        "default_popup": "popup.html"
    },
    
    "content_scripts": [
    	{
    		"matches": ["https://github.com/robots.txt*"],
    		"js": ["js/injection.js"],
    		"run_at": "document_start"
    	}
    ],
        
    "description": "An essential for any GitHub user, providing quick access to all of your GitHub Repositories, Watched Repositories,
				    Organization Repositories, Statistics, Cloning Links and Following in a simple and powerful way.",
    
    "icons": {
        "16": "img/icon_16x16.png",
        "48": "img/icon_48x48.png",
        "128": "img/icon_128x128.png"
    },
    
    "name": "GitHub Repositories",
        
    "permissions": [
    	"tabs",
    	"https://github.com/*",
    	"https://api.github.com/*",
		"clipboardRead"
    ],   
        
    "version": "2.0.4"
}